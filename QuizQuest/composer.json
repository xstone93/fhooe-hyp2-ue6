{
    "name": "fhooe/quizquest",
    "description": "A simple quiz game.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "routing",
        "example",
        "education"
    ],
    "authors": [
        {
            "name": "Alexander Steinmaurer",
            "email": "alexander.steinmaurer@it-u.at",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "fhooe/router": "^1.0",
        "fhooe/twig-extensions": "^1.0",
        "monolog/monolog": "^3.5",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "": [
                "src/"
            ]
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse public views --memory-limit=-1 --level 9",
        "start": [
            "echo 'Web server launched on http://localhost:8888'",
            "php -S localhost:8888 -t public"
        ],
        "test": [
            "@phpstan"
        ]
    }
}
